<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="lsn.persist.Account" table="ACCOUNT">
		<id name="id" column="ACCOUNT_ID">
			<generator class="native" />
  		</id>
  		<property name="facebookId"/>
  		<property name="mdn"/>
		<property name="carrier"/>
		<property name="friends"/>
  		<property name="location"/>
  		<property name="locationUpdated"/>
	</class>	
	<query name="accountByFacebookId"><![CDATA[
		from Account account where account.facebookId = :facebookId
	]]></query>	
	<query name="accountByMdn"><![CDATA[
		from Account account where account.mdn = :mdn
	]]></query>	
</hibernate-mapping>
